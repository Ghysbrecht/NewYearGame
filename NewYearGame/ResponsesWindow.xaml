<Window x:Class="NewYearGame.ResponsesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewYearGame"
        mc:Ignorable="d"
        Title="ResponsesWindow" Height="500" Width="400">
    <Grid>
        <TextBox Text="192.168.0.10" Name="ConnectionAddressTextBox" Height="25" Width ="125" Padding="3" HorizontalAlignment="Left" VerticalAlignment="Top" ></TextBox>
        <Button Content="CONNECT" Name="ConnectButton" Height="25" Width="125" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Click="ConnectButton_Click"></Button>
        <Button Content="CLEAR" Name="ClearButton" Height="25" Width="150" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,125,0" Click="ClearButton_Click"></Button>
        <ScrollViewer Margin="0,25" BorderBrush="Black" BorderThickness="5">
            <TextBlock Text="" Padding="10" Name="ResponsesTextBlock"/>
        </ScrollViewer>
    </Grid>
</Window>
